<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Rent A Ride- @ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/fontawesome")
</head>
<body>

    @Html.Partial("_loginView")


    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    <footer id="Footer">
        <div class="container-fluid">
            <div class="row g-4 Footer-container">
                <div class="col-md-4">
                    <div class="footer-content-container">
                        <h2> <a class="navbar-brand" href="@Url.Action("/Index")">Rent A <span>Ride</span></a></h2>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="footer-content-container">
                        <h4>Quick Links</h4>
                        <div class="footer-content-links">
                            <a href="@Url.Action("/Index")">Home <span>&#62;</span></a>
                            <a href="@Url.Action("/Index")">About Us <span>&#62;</span></a>
                            <a href="@Url.Action("/Index")">Contact Us <span>&#62;</span></a>
                            <a href="@Url.Action("/Index")">Services <span>&#62;</span></a>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="footer-content-container">
                        <h4> Our Address</h4>
                        <div class="footer-content-address">
                            <p> Gazipur, Dhaka, Bangladesh</p>
                            <p>  +999666333 </p>
                            <p> rentaride@gmail.com </p>
                            <p>7:00am - 10:00pm </p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <div class="copyright">  <small>Copyright ©2022 All rights reserved</small></div>
    </footer>

    @Scripts.Render("~/bundles/jquery")

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html>
